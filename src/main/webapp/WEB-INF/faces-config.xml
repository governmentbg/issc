<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd"
    version="2.3">
    
    <managed-bean eager="true">
		<managed-bean-name>systemData</managed-bean-name>
		<managed-bean-class>com.ib.nsiclassif.system.SystemData</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>auditComparator</managed-bean-name>
		<managed-bean-class>com.ib.nsiclassif.components.CompObjAudit</managed-bean-class>
		<managed-bean-scope>none</managed-bean-scope>			
	</managed-bean>
	<!-- experimental CSRF protection!!! -->
	<protected-views>
		<url-pattern>/pages/index.xhtml</url-pattern>
		<url-pattern>/pages/classificationEdit.xhtml</url-pattern>
		<url-pattern>/pages/corespTable.xhtml</url-pattern>
	</protected-views>
	<application>

		<!-- ИМА ДОПЪЛНИТЕЛНА КОНФИГУРАЦИЯ В /IndexUIx/src/main/resources/META-INF/faces-config.xml 
			КОЯТО СЕ НАСЛЕДЯВА ТУКА -->

		<locale-config>
			<default-locale>bg</default-locale>
			<supported-locale>en</supported-locale>
		</locale-config>

		<!-- Навигационните са общи и стоят в основния проект -->
		<resource-bundle>
			<base-name>i18n.navigation</base-name>
			<var>navTexts</var>
		</resource-bundle>
		<!-- и тези конкретните за системата -->
		<resource-bundle>
			<base-name>i18n.beanMessages</base-name>
			<var>beanMessages</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>i18n.labels</base-name>
			<var>labels</var>
		</resource-bundle>
		<system-event-listener>
			<system-event-listener-class>com.ib.nsiclassif.system.MySystemListener</system-event-listener-class>
			<system-event-class>javax.faces.event.PostConstructApplicationEvent</system-event-class>
		</system-event-listener>
		<system-event-listener>
			<system-event-listener-class>com.ib.nsiclassif.system.MySystemListener</system-event-listener-class>
			<system-event-class>javax.faces.event.PreDestroyApplicationEvent</system-event-class>
		</system-event-listener>
	</application>
	
	<lifecycle>
	    <phase-listener>
	        org.primefaces.component.lifecycle.LifecyclePhaseListener
	    </phase-listener>
	</lifecycle>
	
</faces-config>
